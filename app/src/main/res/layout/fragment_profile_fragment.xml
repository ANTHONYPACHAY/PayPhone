<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo02" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_marginTop="15sp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="5sp"

            android:text="ANTHONY ABRAHAN"
            android:textColor="@color/btn_secondary"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/profile_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"

            android:background="@color/white"
            android:gravity="center"

            android:paddingTop="0sp"
            android:paddingBottom="15sp"
            android:layout_marginTop="0sp"
            android:text="Pachay Espinoza"
            android:textColor="@color/btn_secondary"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"

            android:background="@color/white"
            android:gravity="right"
            android:padding="5sp"
            android:paddingTop="0sp"
            android:layout_marginTop="0sp"
            android:text="tonypachay@gmail.com"
            android:textColor="@color/btn_info"
            android:textSize="18sp"
             />

        <TextView
            android:id="@+id/profile_rol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="5dp"
            android:background="@color/btn_warning"
            android:gravity="right"

            android:paddingRight="15sp"
            android:paddingLeft="15sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"

            android:text="Moderador"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>

</FrameLayout>